@model IEnumerable<RecLP3.Models.Employee>

@{
    ViewData["Title"] = "Funcionários";
}

<h1>@ViewData["Title"]</h1>
<a class = "btn btn-primary btn-sm"href ="/Employee/Create/">Cadastrar funcionário</a>

@if(Model.Count() == 0)
{
    <p>Nenhum funcionário cadastrado</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Cargo</th>
                <th>Endereço</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>
        </thead>
        <body>
            @foreach(var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Role</td>
                    <td>@employee.Address</td>
                    <td>@employee.Email</td>
                    <td>@employee.Phone</td>
                    <td>
                        <a class = "btn btn-primary btn-sm"href ="/Employee/Show/@employee.Id">Ver</a>
                        <a class = "btn btn-primary btn-sm"href ="/Employee/Update/@employee.Id">Atualizar</a>
                        <a class = "btn btn-primary btn-sm"href ="/Employee/Delete/@employee.Id">Deletar</a>
                    </td>
                </tr>
            }
        </body>
    </table>        
}