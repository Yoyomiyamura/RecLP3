@model RecLP3.Models.Customer

@{
    ViewData["Title"] = "Atualizar cliente";
}

<div class="text">
    <h1 class="display-4">Atualizar cadastro do cliente</h1>
    <hr>

</div>
<div class="container">
    <form action="Update" method="POST">
        <div class="form-group">
            <label for="id">Id</label>
            <input type="text" name="id" id="id" class="form-control" value="@Model.Id" readonly>
        </div>
        <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" name="name" id="name" class="form-control" value="@Model.Name" required>
        </div>
        <div class="form-group">
            <label for="description">Cidade</label>
            <input type="text" name="city" id="city" class="form-control" value="@Model.City" required>
        </div>
        <div class="form-group">
            <label for="description">Endere√ßo</label>
            <input type="text" name="address" id="address" class="form-control" value="@Model.Address" required>
        </div>
        <div class="form-group">
            <label for="description">Email</label>
            <input type="text" name="email" id="email" class="form-control" value="@Model.Email" required>
        </div>
        <div class="form-group">
            <label for="description">Phone</label>
            <input type="text" name="phone" id="phone" class="form-control" value="@Model.Phone" required>
        </div>

        <button type="submit" class="btn btn-primary">Atualizar</button>
    </form>
</div>